# Core database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=news_portal
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CMS provider configuration
CMS_PROVIDER=ghost
GHOST_ADMIN_API_URL=https://your-ghost-instance.example.com/ghost/api/admin
GHOST_ADMIN_API_KEY=your-ghost-admin-api-key

# Telegram bot configuration
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# Feature flags
USE_WORDPRESS=false
AUTO_PUBLISH_SCORE=80

# Time zone and localisation
TZ=Europe/Amsterdam
LANG=ru_RU.UTF-8